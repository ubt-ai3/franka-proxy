{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    // Windows Presets
    {
      "name": "common-config",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/Windows/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/code/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "Debug",
      "inherits": "common-config",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release",
      "inherits": "common-config",
      "hidden": false,
      "installDir": "${sourceDir}/install/",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    // Windows WSL2 presets
    {
      "name": "wsl2-common-config",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/Ubuntu/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "~/code/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "Debug-wsl2",
      "inherits": "wsl2-common-config",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release-wsl2",
      "inherits": "wsl2-common-config",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug",
      "configurePreset": "Debug"
    },
    {
      "name": "Release",
      "configurePreset": "Release"
    },
    {
      "name": "Debug-wsl2",
      "configurePreset": "Debug-wsl2"
    },
    {
      "name": "Release-wsl2",
      "configurePreset": "Release-wsl2"
    }
  ]
}